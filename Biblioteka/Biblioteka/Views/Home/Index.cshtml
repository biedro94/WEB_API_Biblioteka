<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout-3.4.0.js"></script>
<script src="~/KnockoutViewModels/BibliotekaHomeViewModel.js"></script>
<script src="~/Scripts/simplegrid.js"></script>


<div class="row">
    <div class="col-md-3">
        <h2 class="kategoria">Kategorie</h2>
        <ul class="cat" data-bind="foreach: categories">
            <li><a href="#" class="opcja" data-bind="text: $data, click: function() {$root.save($data)}"></a></li>
        </ul>
    </div>
   <div class="col-md-9">
       <div class="row">
           <div class="col-md-4">
               <strong class="text">Wyszukiwanie pozycji po tytule:</strong>
           </div>
            <div class="col-md-4 form-group">
                <div class="input-group">                    
                    <input type="text" class="form-control" data-bind="value: searchPattern" placeholder="Wprowadź tytuł">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" data-bind="click: function() {$root.search()}">Szukaj</button>
                    </span>
                </div>
            </div>
           
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                        <th>Wydawca</th>
                        <th>Rok wydania</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: pozycje">
                    <tr>
                        <td data-bind="text: Tytul"></td>
                        <td data-bind="text: Autor"></td>
                        <td data-bind="text: Wydawca"></td>
                        <td data-bind="text: RokWydania"></td>
                        <td>
                            <form data-bind="submit: getTweets">
                                <button type="submit" class="btn btn-info btn-group-xs" data-bind="click: function (){ $root.details(IdPoz)},">Szczegóły</button>
                            </form>
                            <div data-bind="with: resultData">                                
                                <ol data-bind="foreach: detail">
                                    <li data-bind="text: text"></li>
                                </ol>
                                <button data-bind="click: $root.clearResults">Clear tweets</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>                               
        </div>
    </div>
</div>



