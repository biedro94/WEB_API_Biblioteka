<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/knockout-3.4.0.js"></script>
<script src="~/KnockoutViewModels/BibliotekaHomeViewModel.js"></script>
<script src="~/Scripts/simplegrid.js"></script>


<div class="row">
    <div class="col-md-3">
        <h2 class="kategoria">Kategorie</h2>
        <ul class="cat" data-bind="foreach: categories">
            <li><a href="#" class="opcja" data-bind="text: $data, click: function() {$root.save($data)}"></a></li>
        </ul>
    </div>
   <div class="col-md-9">
       <div class="row">
           <div class="col-md-4">
               <strong class="text">Wyszukiwanie pozycji po tytule:</strong>
           </div>
            <div class="col-md-4 form-group">
                <div class="input-group">                    
                    <input type="text" class="form-control" data-bind="value: searchPattern" placeholder="Wprowadź tytuł">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" data-bind="click: function() {$root.search()}">Szukaj</button>
                    </span>
                </div>
            </div>
           
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                        <th>Rok wydania</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: pozycje">
                    <tr>
                        <td data-bind="text: Tytul"></td>
                        <td data-bind="text: Autor"></td>                        
                        <td data-bind="text: RokWydania"></td>
                        <td>                                         
                            <button type="button" class="btn btn-info btn-group-xs" data-bind="click: function (){ $root.getPozDetails($data.IdPoz)}">Szczegóły</button>                                          
                        </td>                        
                    </tr>
                    <tr>
                        <td colspan="4">
                            <div data-bind="with: $data.Flaga">
                                <h4><strong>Tytuł:</strong> <span data-bind="text: $parent.Tytul"> </span></h4>
                                <h4><strong>Autor:</strong> <span data-bind="text: $parent.Autor"> </span></h4>
                                <h5>Wydawnictwo: <span data-bind="text: $parent.Wydawca"> </span></h5>
                                <h5>Język: <span data-bind="text: $parent.Jezyk"> </span></h5>
                                <h5>Opis:</h5><p data-bind="text: $parent.Opis"></p>
                                <!--<h5>Dostępność</h5><p data-bind="text: $parent.Dostepnosc"></p>-->
                                <button type="button" class="btn btn-info btn-group-xs" data-bind="click: function (){ $root.clearDetails($parent.IdPoz)}">Ukryj</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table> 
            
 
                       
        </div>
    </div>
</div>



